@model High_Webbanquanao.Data.ProductCategory

@{
    ViewData["Title"] = "Detail_categori";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom Styles */
        .gray-button {
            background-color: gray; /* Change the background color to gray */
            color: white; /* Set text color to white for better visibility */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-4 text-center">Danh mục sản phẩm chi tiết</h1>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title text-center">Danh mục sản phẩm</h4>
                <hr />
                <div class="row">
                    <div class="col-sm-6">
                        <strong>Tên danh mục:</strong>
                    </div>
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.CategoryName)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <strong>Danh mục thuộc nhóm giới tính:</strong>
                    </div>
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.Gender)
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-4 d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-primary gray-button">Quay lại danh sách</a>
        </div>
    </div>

    <!-- Include Bootstrap JS and any additional scripts if needed -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
