@model High_Webbanquanao.Data.ProductCategory

@{
    ViewData["Title"] = "Create_categori";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
        }

        .gray-button {
            background-color: gray;
            color: white; /* Set text color to white for better visibility */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Tạo danh mục sản phẩm</h1>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh mục sản phẩm</h4>
                <hr />

                <form asp-action="Create_categori">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label">Tên danh mục</label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label">Danh mục thuộc nhóm giới tính:</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Tạo danh mục mới</button>
                        <a asp-action="Index" class="btn gray-button">Quay lại danh sách</a>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and any additional scripts if needed -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
