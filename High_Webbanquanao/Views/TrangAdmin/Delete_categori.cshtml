@model High_Webbanquanao.Data.ProductCategory

@{
    ViewData["Title"] = "Delete_categori";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Additional custom styles can be added here */
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-4 text-center">Xóa Danh mục Sản phẩm</h1>
        <h3 class="text-center">Bạn có chắc chắn muốn xóa không?</h3>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title text-center">Danh mục sản phẩm</h4>
                <hr />
                <div class="row">
                    <div class="col-sm-2">
                        <strong>Tên danh mục</strong>
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.CategoryName)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <strong>Danh mục thuộc nhóm giới tính:</strong>
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Gender)
                    </div>
                </div>
            </div>
        </div>
        <form asp-action="Delete_categori">
            <input type="hidden" asp-for="CategoryId" />
            <div class="mt-4 d-flex justify-content-between">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-primary d-flex justify-content-end">Quay lại danh sách</a>
            </div>
        </form>
    </div>

    <!-- Include Bootstrap JS and any additional scripts if needed -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
