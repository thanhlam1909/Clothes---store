@model High_Webbanquanao.Data.Invoice
@{
    ViewData["Title"] = "Detail_categori";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Additional custom styles can be added here */
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mt-4">Cập nhật trạng thái đơn hàng</h1>
        <div class="card mt-4">
            <div class="card-body">
                <hr />
                <form asp-action="editUpdateOrderStatus" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="InvoiceId" />
                    <div class="mb-3">
                        <label asp-for="UserId" class="control-label">Mã người dùng</label>
                        <input readonly asp-for="UserId" class="form-control" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="InvoiceDate" class="control-label">Ngày đặt hàng</label>
                        <input readonly asp-for="InvoiceDate" class="form-control" />
                        <span asp-validation-for="InvoiceDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TotalAmount" class="control-label">Tổng tiền thanh toán</label>
                        <input readonly asp-for="TotalAmount" class="form-control" />
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label asp-for="ShippingFee" class="control-label">Phí vận chuyển</label>
                        <input readonly asp-for="ShippingFee" class="form-control" />
                        <span asp-validation-for="ShippingFee" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PaymentMethod" class="control-label"></label>
                        <input readonly asp-for="PaymentMethod" class="form-control" />
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="StatusOrder" class="control-label">Trạng thái đơn hàng</label>
                        <select asp-for="StatusOrder" class="form-control">
                            <option value="Xác nhận">Xác nhận</option>
                            <option value="Đã thanh toán">Đã thanh toán</option>
                        </select>
                        <span asp-validation-for="StatusOrder" class="text-danger"></span>

                    </div>
                    <div class="mt-4 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary" style="margin-right: 20px;">Lưu thay đổi</button>
                        <a asp-action="Index" class="btn btn-secondary d-flex justify-content-end">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and any additional scripts if needed -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
